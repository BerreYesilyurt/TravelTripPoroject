@model TravelTripProject.Models.Siniflar.Blog
@{
    ViewBag.Title = "BlogGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Güncelleme Sayfası</h2>
<br />

@*Html.BeginForm şu işe yarıyor. Bu form ne zaman çalışacak? BlogGuncelle AcitonResult'u aktif olduğu zaman. Nerede? AdminController'ın içinde. Ne zaman çalışacak? Post oluştuğu zaman'*@
@using (Html.BeginForm("BlogGuncelle", "Admin", FormMethod.Post))
{

    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly="readonly" }) @*Uzun bir textbox oluşturmak için form-control ekledik.*@
    //ReadOnlyCollection ile erişimi engellyioruz. Kafasına göre değiştiremiyor.

    <br />
    @Html.LabelFor(x => x.Baslik)
    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" }) @*Uzun bir textbox oluşturmak için form-control ekledik.*@

    <br />

    @Html.LabelFor(x => x.Tarih)
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })

    <br />

    @Html.LabelFor(x => x.BlogImage)
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })

    <br />

    @Html.LabelFor(x => x.Aciklama)
    @Html.TextAreaFor(x => x.Aciklama,15,1, new { @class = "form-control" })

    <br />

    <button class="btn btn-primary">Blog Güncelle</button>



}


