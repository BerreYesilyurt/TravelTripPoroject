@using TravelTripProject.Models.Siniflar
@model List<Blog>

<div class="con-bot">
    @foreach (var x in Model)
    {
    <div class="left">
        <div class="bot-left">
            <img src="@x.BlogImage" width="300" height="165" alt="" />
        </div>
        <div class="left-text">
            <h4>@x.Baslik</h4>
            <span class="doller">@x.Tarih.ToShortDateString()</span>
            <p>@x.Aciklama.Substring(0,80)</p> @*Substring belirtilen indexeten diğer indexe kadar olan kısmı alıyor.*@
            <p><a href="/Blog/BlogDetay/@x.ID"><span class="read">Devamını Oku >></span></a></p>
        </div>
    </div>
    }

