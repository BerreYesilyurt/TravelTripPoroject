

<div class="content-form">
    <h3>Bir yorum yapınız</h3>
    <!--@ViewBag.deger--> @*Controller tarafında tanımlanan değişkenin ViewBag ile alınması*@
    <form method="post">
        @*Post işlemi yapılırsa tetikleniyor.*@
        <input type="text" placeholder="ID" name="BlogId" value="@ViewBag.deger" required/>
        <input type="text" placeholder="Kullanıcı Adı" name="KullaniciAdi" required /> @*name adı veri tabanındaki column adı ile aynı olmalıdır.*@
        <input type="text" placeholder="Mail Adresi" name="Mail" required />
        <textarea placeholder="Yorum" name="Yorum"></textarea>
        <input type="submit" value="Gönder" />
    </form>
</div>

